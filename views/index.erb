<head>
  <style>
    @font-face {
      font-family: DavidaD;
      src: url("/font/davidad.woff");
    }
    body {
      background-color: #4287f5;
      font-family: DavidaD;
      text-align: center;
      vertical-align: middle;
      color:ffffff;
    }
    input, label {
      font-size: 30px;
      font-family: DavidaD;
    }
    h1 {
      font-size: 60px;
    }
    h2 {
      font-size: 40px;
    }
  </style>
</head>

<h1>Hello There!</h1>
<form action="/birthday" method='post'>
  <h2>What's your name?</h2>
  <input style='width: 600px; height: 40px;' type='text' name='name'>
  <h2>When's your birthday?</h2>
  <label for='birth_day'>
    Day:
    <input style='width: 70px; height: 40px;' type='text' name='birth_day'>
    </label>
  <label for='birth_month'>
    Month:
    <select style='width: 100px; height: 40px; border-radius: 15%' name="birth_month">
      <option value="January">January</option>
      <option value="February">February</option>
      <option value="March">March</option>
      <option value="April">April</option>
      <option value="May">May</option>
      <option value="June">June</option>
      <option value="July">July</option>
      <option value="August">August</option>
      <option value="September">September</option>
      <option value="October">October</option>
      <option value="November">November</option>
      <option value="December">December</option>
    </select>
  </label>
  <br><br>
  <input style='text-align: center; width: 100px; height: 40px; border-radius: 15%' type=submit value=Go!>
</form>
