<head>
  <style>
    @font-face {
      font-family: DavidaD;
      src: url("/font/davidad.woff");
    }
    body, form {
      background-color: #4287f5;
      font-family: DavidaD;
      text-align: center;
      vertical-align: middle;
      color:ffffff;
    }
    input, label {
      font-size: 30px;
      font-family: DavidaD;
    }
    h1 {
      font-size: 60px;
    }
    h2 {
      font-size: 40px;
    }
  </style>
</head>

  <form action="/info" method='post'>
    <h1>Hello There!</h1>
    <h2>What's your name?</h2>
    <input placeholder='Enter Name:' style='width: 600px; height: 40px;' type='text' name='name'>
    <h2>When's your birthday?</h2>
    <label placeholder='Enter Day:' for='birth_day'>
      Day:
      <input placeholder='dd' style='width: 70px; height: 40px;' type='text' name='birth_day'>
      </label>
    <label for='birth_month'>
      Month:
      <select style='width: 100px; height: 40px; border-radius: 15%' name="birth_month">
        <option value=1>January</option>
        <option value=2>February</option>
        <option value=3>March</option>
        <option value=4>April</option>
        <option value=5>May</option>
        <option value=6>June</option>
        <option value=7>July</option>
        <option value=8>August</option>
        <option value=9>September</option>
        <option value=10>October</option>
        <option value=11>November</option>
        <option value=12>December</option>
      </select>
    </label>
    <br><br>
    <input style='text-align: center; width: 100px; height: 40px; background-color: #ffffff; color: 4287f5; border-radius: 15%' type=submit value=Go!>
  </form>

